<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %} {{ title }} {% endblock %}</title>
        {% block stylesheets %}{% endblock %}
    </head>
    <body>

        <header>
        <p>
            {% if app.request.get('_route') != 'index' %} 
                <a href="{{ path("index") }}">Index</a> |
            {% endif %}
            {% if app.request.get('_route') == 'showConcert' %}
                <a href="{{ path("concertsList") }}">Retour aux concerts</a> |                
            {% endif %}
            {% if app.user %}
                <a href="{{ path('myAccount', {'userId': app.user.id}) }}">Mon compte</a> |
                <a href="{{ path("logout") }}">DÃ©connexion</a>
            {% else %}
                {% if app.request.get('_route') != 'login' %}
                    <a href="{{ path("login") }}">Connexion</a>
                {% else %}
                    <a href="{{ path("register") }}">Inscription</a>
                {% endif %}
            {% endif %}
            <hr />
        </p>
        </header>

        <h1>{{ title }}</h1>
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
